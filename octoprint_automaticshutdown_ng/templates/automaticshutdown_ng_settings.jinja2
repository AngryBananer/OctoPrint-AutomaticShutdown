<form class="form-horizontal">

    <h4>General</h4>
    <div class="control-group">
        <label class="control-label">Abort Timeout</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" class="input-mini text-right" min="0" data-bind="value: settings.plugins.automaticshutdown_ng.abortTimeout">
                <span class="add-on">sec</span>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.automaticshutdown_ng.awaitHotendTemp"> Wait for Hotend Temperature
            </label>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Maximum Hotend Temperature</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" class="input-mini text-right" min="0" data-bind="value: settings.plugins.automaticshutdown_ng.maxHotendTemp, enable: settings.plugins.automaticshutdown_ng.awaitHotendTemp">
                <span class="add-on">&#176;C</span>
            </div>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
            <input type="checkbox" data-bind="checked: settings.plugins.automaticshutdown_ng.rememberCheckBox"> Remember the value of "Shutdown after print finishes"
            </label>
        </div>
    </div>
</form>
